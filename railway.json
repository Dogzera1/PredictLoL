{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": ".",
        "LOG_LEVEL": "INFO",
        "ENVIRONMENT": "production"
      }
    }
  }
} 